@{ ViewBag.Title = "Arızalar";}
@model List<Failure>

<div class="container-fluid ss_service_one ss_section_sec_bg spacer_top spacer_bottom ss_two">
    <div class="row">
        <div class="container">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#menu1">Bekleyen Arızalar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#menu2">Atanmış Arızalar</a>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div id="menu1" class="container tab-pane active">
                    <br />
                    <br />
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Arıza Adı</th>
                                <th>Arıza Açıklama</th>
                                <th>Adres</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>Teknisyen Ata</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 1; i <= Model.Count(); i++)
                            {
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@Model[i - 1].FailureName</td>
                                    <td>@Model[i - 1].FailureDescription</td>
                                    <td>@Model[i - 1].AddressDetail</td>
                                    <td>@Model[i - 1].CreatedDate</td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                Teknisyen Ata
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                @foreach (TechnicianAssignViewModel item in ViewBag.Technicians)
                                                {
                                                    <a asp-controller="Operator" asp-action="TechnicianAssign" asp-for="@item.TechnicianName" class="dropdown-item">
                                                        @item.TechnicianName
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div id="menu2" class="container tab-pane fade">
                    <br>
                    <h2>Atanmış Arızalar</h2>
                    <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12">
        <br />
    </div>
</div>

@section Scripts
{
    <script>
        $(function () {
            $(".dropdown-menu").on('click', 'a', function () {
                $(this).parents('.dropdown').find('button').text($(this).text());
            });
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous">

    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous">
    </script>
}

@section Styles
{
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
}
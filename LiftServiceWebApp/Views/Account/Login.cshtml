@model LoginViewModel
@{
    ViewBag.Title = "Giriş";
}
@{ Layout = null;}

<head>

    <link rel="stylesheet" href="~/user-assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/user-assets/css/fonts.css" />
    <link rel="stylesheet" href="~/user-assets/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/user-assets/css/magnific-popup.css" />
    <link rel="stylesheet" href="~/user-assets/css/swiper.min.css" />
    <link rel="stylesheet" href="~/user-assets/css/animate.css" />
    <link rel="stylesheet" href="~/user-assets/css/style.css" />
    <!--=== Favicon Link ===-->
    <link rel="shortcut icon" type="image/png" href="~/user-assets/images/fav-icon.png">

</head>

<body class="ss_login_bg">
    <section class="s_login">
        <div class="ss_box_bg">
            <a asp-controller="Home" asp-action="Index"> <img src="~/user-assets/images/svg/logo1.svg" class="img-fluid" alt="logo" /></a>

            <div class="s_heading">
                <h2>Welcome to <span>Solar Supplier</span></h2>
                <p>Please Login To Your Account</p>
            </div>
            <form method="post" asp-controller="Account" asp-action="Login">
                <div class="s_input">
                    <span asp-validation-for="UserName" class="text-danger"></span>

                    <input type="text" placeholder="Kullanıcı Adı" name="UserName" id="UserName" class="require" />
                </div>
                <div class="s_input">
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <input type="password" placeholder="Şifre" name="Password" id="Password" class="require" />

                </div>
                <div class="s_remember">
                    <label>
                        Remember Me
                        <input type="checkbox">
                        <span class="s_checkbox"></span>
                    </label>
                    <a href="forget-password.html">Şifremi Unuttum</a>
                </div>
                <div class="s_jump_page">
                    <button type="submit" class="ss_btn submitForm">Oturum Aç</button>

                    <a asp-controller="Account" asp-action="Register" class="login_anchor">Kayıt Ol</a>
                    <div class="response"></div>
                </div>
            </form>
        </div>
    </section>

    <script src="~/user-assets/js/jquery.min.js"></script>
    <script src="~/user-assets/js/bootstrap.min.js"></script>
    <script src="~/user-assets/js/jquery.magnific-popup.min.js"></script>
    <script src="~/user-assets/js/isotope.pkgd.min.js"></script>
    <script src="~/user-assets/js/swiper.min.js"></script>
    <script src="~/user-assets/js/wow.min.js"></script>
    <script src="~/user-assets/js/script.js"></script>

</body>

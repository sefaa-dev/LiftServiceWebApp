@{ ViewBag.Title = "Arızalar";}
@model List<AssignedFailureViewModel>

<Style>
    .ss_two_sec:after {
        background: white;
    }
    .table thead th {
        padding-bottom: 25px;
    }
    .table td, .table th {
        vertical-align: inherit;
    }
</Style>

<div class="container-fluid ss_service_one ss_section_sec_bg spacer_top spacer_bottom ss_two">
    <div class="row">

        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="ss_two_sec wow fadeIn" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeIn;">

                <h1>Arızalar</h1>
                <hr />    
                <br /><br />

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Arıza Adı</th>
                            <th scope="col">Arıza Detay</th>
                            <th scope="col">Durumu</th>
                            <th scope="col">Teknisyen</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 1; i <= Model.Count(); i++)
                        {
                            <tr>
                                <th scope="row">@i</th>
                                <td>@Model[i - 1].FailureName</td>
                                <td>@Model[i - 1].FailureDescription</td>
                                <td>@Model[i - 1].FailureState</td>
                                <td>@if (Model[i - 1].TechnicianName == null)
                                    {<h5 class="text-danger bold"> X </h5>}
                                        else 
                                    {<h5>@Model[i - 1].TechnicianName</h5>}
                                    </td>
                                <td>
                                    <form method="post" asp-action="GetFailure" asp-controller="Customer">
                                        <input type="hidden" asp-for="@Model[0]" name="failureId" />
                                        <button class="btn btn-secondary">Detay</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
